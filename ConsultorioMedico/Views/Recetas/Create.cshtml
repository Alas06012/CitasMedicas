@model ConsultorioMedico.Models.Receta

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Crear Receta</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Código Receta</label>
                <input asp-for="CodRecetas" class="form-control" />
                <span asp-validation-for="CodRecetas" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Medicamento</label>
                <input asp-for="Medicamento" class="form-control" />
                <span asp-validation-for="Medicamento" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Cantidad</label>
                <input asp-for="Cantidad" class="form-control" />
                <span asp-validation-for="Cantidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Prescripcion</label>
                <input asp-for="Prescripcion" class="form-control" />
                <span asp-validation-for="Prescripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Estado" type="hidden" value="1" class="form-control" />
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-dark">Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
