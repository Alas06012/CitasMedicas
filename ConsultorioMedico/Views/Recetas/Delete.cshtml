@model ConsultorioMedico.Models.Receta

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Eliminar Receta</h4>
<h3>¿Está seguro de eliminar el siguiente registro?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Código Receta: 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CodRecetas)
        </dd>
        <dt class = "col-sm-2">
            Medicamento: 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Medicamento)
        </dd>
        <dt class = "col-sm-2">
            Cantidad: 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Cantidad)
        </dd>
        <dt class = "col-sm-2">
            Preescripcion: 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Prescripcion)
        </dd>
       @* <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Estado)
        </dd>*@
    </dl>
    <form asp-action="Delete">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="IdRecetas" />
        <input type="hidden" asp-for="CodRecetas" class="form-control" />
        <input type="hidden" asp-for="Medicamento" class="form-control" />
        <input type="hidden" asp-for="Estado" class="form-control" />
        <input type="hidden" asp-for="Cantidad" class="form-control" /><input type="hidden" asp-for="Prescripcion" class="form-control" />
        <div class="form-group">
            <input type="submit" value="Borrar" class="btn btn-danger" /> |
            <button asp-action="Index" class="btn btn-outline-dark">Volver</button>
        </div>
    </form>
</div>
