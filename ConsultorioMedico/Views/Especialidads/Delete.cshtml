@model ConsultorioMedico.Models.Especialidad

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h4>Eliminar Especialidad</h4>
<h3>¿Está seguro de eliminar el siguiente registro?</h3>
<div>
    
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Código Especialidad: 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CodEspecialidad)
        </dd>
        <dt class = "col-sm-2">
            Especialidad: 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Especialidad1)
        </dd>
    </dl>


    <form asp-action="Delete">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="IdEspecialidad" />
        <input type="hidden" asp-for="CodEspecialidad" class="form-control" />
        <input type="hidden" asp-for="Especialidad1" class="form-control" />
        <input type="hidden" asp-for="Estado" class="form-control" />
        <div class="form-group">
            <input type="submit" value="Borrar" class="btn btn-danger" /> |
            <button asp-action="Index" class="btn btn-outline-dark">Volver</button>
        </div>
    </form>
</div>
