@model ConsultorioMedico.Models.Especialidad

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Crear Especialidad</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
          <div class="form-group">
                <label class="control-label">Código Especialidad</label>
                <input asp-for="CodEspecialidad" class="form-control" />
                <span asp-validation-for="CodEspecialidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Especialidad: </label>
                <input asp-for="Especialidad1" class="form-control" />
                <span asp-validation-for="Especialidad1" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Estado" class="form-control" value="1" type="hidden"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-dark">Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
