@model ConsultorioMedico.Models.Secretarium

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar Secretarias</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdSecretaria" />
            <div class="form-group">
                <input asp-for="CodSecre" value="1" class="form-control" type="hidden"/>
            </div>
            <div class="form-group">
                <label class="control-label">DUI</label>
                <input asp-for="DuiSecre" class="form-control" />
                <span asp-validation-for="DuiSecre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Nombres</label>
                <input asp-for="NomSecre" class="form-control" />
                <span asp-validation-for="NomSecre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Apellidos</label>
                <input asp-for="ApeSecre" class="form-control" />
                <span asp-validation-for="ApeSecre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Dirección</label>
                <input asp-for="DirSecre" class="form-control" />
                <span asp-validation-for="DirSecre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Teléfono</label>
                <input asp-for="TelSecre" class="form-control" />
                <span asp-validation-for="TelSecre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Estado" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Usuario</label>
                <select asp-for="IdUsuario" class="form-control" asp-items="ViewBag.IdUsuario"></select>
                <span asp-validation-for="IdUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <button asp-action="Index" class="btn btn-outline-dark">Volver</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
