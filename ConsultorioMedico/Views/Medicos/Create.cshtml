@model ConsultorioMedico.Models.Medico

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Create Medico</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label"> Código Medico:</label>
                <input asp-for="CodMedico" class="form-control" />
                <span asp-validation-for="CodMedico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">DUI</label>
                <input asp-for="DuiMedico" class="form-control" />
                <span asp-validation-for="DuiMedico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Nombres</label>
                <input asp-for="NomMedico" class="form-control" />
                <span asp-validation-for="NomMedico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Apellidos</label>
                <input asp-for="ApeMedico" class="form-control" />
                <span asp-validation-for="ApeMedico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Direccion:</label>
                <input asp-for="DirMedico" class="form-control" />
                <span asp-validation-for="DirMedico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Teléfono:</label>
                <input asp-for="TelMedico" class="form-control" />
                <span asp-validation-for="TelMedico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="hidden" asp-for="Estado" value="1" class="form-control" />
            </div>
            <div class="form-group">
                <label class="control-label">Especialidad:</label>
                <select asp-for="IdEspecialidad" class ="form-control" asp-items="ViewBag.IdEspecialidad"></select>
            </div>
            <div class="form-group">
                <label class="control-label">Usuario:</label>
                <select asp-for="IdUsuario" class ="form-control" asp-items="ViewBag.IdUsuario"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Crear" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-outline-dark">Volver</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
