@model ConsultorioMedico.Models.Medico

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Editar Medico</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="IdMedico" />
            <div class="form-group">
                <label asp-for="CodMedico" class="control-label"></label>
                <input asp-for="CodMedico" class="form-control" />
                <span asp-validation-for="CodMedico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DuiMedico" class="control-label"></label>
                <input asp-for="DuiMedico" class="form-control" />
                <span asp-validation-for="DuiMedico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NomMedico" class="control-label"></label>
                <input asp-for="NomMedico" class="form-control" />
                <span asp-validation-for="NomMedico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ApeMedico" class="control-label"></label>
                <input asp-for="ApeMedico" class="form-control" />
                <span asp-validation-for="ApeMedico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DirMedico" class="control-label"></label>
                <input asp-for="DirMedico" class="form-control" />
                <span asp-validation-for="DirMedico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="TelMedico" class="control-label"></label>
                <input asp-for="TelMedico" class="form-control" />
                <span asp-validation-for="TelMedico" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Estado" class="control-label"></label>
                <input asp-for="Estado" class="form-control" />
                <span asp-validation-for="Estado" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdEspecialidad" class="control-label"></label>
                <select asp-for="IdEspecialidad" class="form-control" asp-items="ViewBag.IdEspecialidad"></select>
                <span asp-validation-for="IdEspecialidad" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdUsuario" class="control-label"></label>
                <select asp-for="IdUsuario" class="form-control" asp-items="ViewBag.IdUsuario"></select>
                <span asp-validation-for="IdUsuario" class="text-danger"></span>
            </div>

            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
                <button asp-action="Index" class="btn btn-outline-dark">Volver</button>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
