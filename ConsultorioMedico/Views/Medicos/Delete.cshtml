@model ConsultorioMedico.Models.Medico

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Eliminar Médico</h4>
<h3>¿Está seguro de eliminar el siguiente registro?</h3>
<div>
    <h4>Medico</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Codigo Médico
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CodMedico)
        </dd>
        <dt class = "col-sm-2">
            DUI
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DuiMedico)
        </dd>
        <dt class = "col-sm-2">
            Nombre
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomMedico)
        </dd>
        <dt class = "col-sm-2">
            Apellido
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ApeMedico)
        </dd>
        <dt class = "col-sm-2">
           Direccion
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DirMedico)
        </dd>
        <dt class = "col-sm-2">
            Telefono
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.TelMedico)
        </dd>
        <dt class = "col-sm-2">
            Especialidad
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdEspecialidadNavigation.IdEspecialidad)
        </dd>
        <dt class = "col-sm-2">
            Usuario
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IdUsuarioNavigation.IdUsuario)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IdMedico" />
        <div class="form-group">
            <input type="submit" value="Borrar" class="btn btn-danger" /> |
            <button asp-action="Index" class="btn btn-outline-dark">Volver</button>
        </div>
    </form>
</div>
