@model ConsultorioMedico.Models.Expediente

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h4>Eliminar Expediente</h4>
<h3>¿Está seguro de eliminar el siguiente registro?</h3>
<div>

    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Codigo Expediente:
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CodExpediente)
        </dd>
        <dt class = "col-sm-2">
            Responsable: 
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Responsable)
        </dd>
       @* <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Estado)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Estado)
        </dd>*@
    </dl>

    <form asp-action="Delete">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="IdExpediente" />
        <input type="hidden" asp-for="CodExpediente" class="form-control" />
        <input type="hidden" asp-for="Responsable" class="form-control" />
        <input type="hidden" asp-for="Estado" class="form-control" />
        <div class="form-group">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            <button asp-action="Index" class="btn btn-outline-dark">Volver</button>
        </div>
    </form>
</div>
